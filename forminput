#!/bin/ksh

tempfile=$( mktemp )
tempfile2=$( mktemp )

cat > "$tempfile2"

cat "$tempfile2" | strext -c  '<input' '/>' -l > "$tempfile"
cat "$tempfile2" | strext -c  '<textarea' '>' -l >> "$tempfile"
cat "$tempfile2" | strext -c  '<button' '</button>' -l >> "$tempfile"

start=1

while read -r line
do

  name=$( echo "$line" | strext -c 'name="' '"' -l | tr -d "\n" )
  if test -z "$name"
  then
    name=$( echo "$line" | strext -c 'name='\' \' -l | tr -d "\n" )
    if test -z "$name"
    then
      continue
    fi
  fi

  value_ans=$( echo "$line" | strext -c 'value="' '"' | tr -d "\n" )
  if test -z "$value_ans"
  then
    value_ans=$( echo "$line" | strext -c 'value='\' \' | tr -d "\n" )
  fi

  if (( start == 1 ))
  then
    start=0
  else
    printf "&\n"
  fi

  printf "%s" "$name"

  if test -z "$value_ans"
  then
    printf "\n=\n\n"
    continue
  fi
  printf "\n=\n%s\n" "$value_ans"

done < "$tempfile"

rm -f "$tempfile" "$tempfile2"
